<resources>
    <!-- Base application theme -->
    <style name="Base.Theme.TravelTickets" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/grey_1</item> <!-- Основной цвет темы -->
        <item name="colorPrimaryDark">@color/grey_2</item> <!-- Цвет статуса бара -->
        <item name="colorAccent">@color/blue</item> <!-- Акцентный цвет -->
        <item name="android:statusBarColor">@color/grey_2</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black</item> <!-- Фоновый цвет -->
        <item name="android:windowBackground">@color/black</item> <!-- Фон окна -->
    </style>

    <!-- Text styles -->
    <style name="TextTitle1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitle3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextBody2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TinyText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_6</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Base button style -->
    <style name="BaseButtonStyle" parent="ButtonText">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Specific button styles -->
    <style name="ButtonStyleGrey" parent="BaseButtonStyle">
        <item name="android:background">@drawable/background_button_grey</item>
    </style>
</resources>